@model NelQuiz.Viewmodels.LoginViewModel
@{
    Layout = "_FullLayout";
    ViewData["Title"] = "Login";

}
<script>
    function IsCapsLockOn(event) {
        if (event.getModifierState("CapsLock")) {  // If "caps lock" is pressed, display the warning text
            document.getElementById("spnWarning").style.display = "block";
        }
        else {
            document.getElementById("spnWarning").style.display = "none";
        }
    }
</script>
<div>
    <a class="hiddenanchor" id="signup"></a>
    <a class="hiddenanchor" id="signin"></a>




    <div class="login_wrapper">
        <div class="animate form login_form">
            <div class="row">
                <div class="col-md-12 col-sm-12 ">

                    <div class="x_panel">
                        <div class="x_title">
                            @*<h2>E-Banking</h2>*@
                            <h1 style="text-align:center;"><i class="fa fa-bank"></i> Nel-Quiz</h1>

                            <section class="login_content">
                                <form method="post" asp-action="Login">
                                    <p><span id="spnWarning" style='display:none;color:red'>WARNING! Caps lock is ON.</span></p>

                                    <h1>Login</h1>
                                    <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div>
                                        <input type="text" asp-for="Email" class="form-control" placeholder="Email" required="" />
                                    </div>
                                    <div>
                                        <input type="password" asp-for="Password" onclick="IsCapsLockOn(event)" onkeyup="IsCapsLockOn(event)" class="form-control" placeholder="Password" required="" />
                                    </div>
                                    <div>
                                        <button class="btn btn-info submit" type="submit">Log in</button>
                                        <a class="reset_pass" href="#">Lost your password?</a>
                                    </div>

                                    <div class="clearfix"></div>

                                    <div class="separator">
                                        <p class="change_link">
                                            New to e-banking?
                                            <a asp-controller="Home" asp-action="Signup" class="to_register"> Create Account </a>
                                        </p>

                                        <div class="clearfix"></div>
                                        <br />

                                        <div>

                                            <p>©@DateTime.Today.Year All Rights Reserved.</p>
                                        </div>
                                    </div>
                                </form>
                            </section>
                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>
</div>
