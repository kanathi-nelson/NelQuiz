@model NelQuiz.Models.Answeroptions

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Answer options</h4>

<hr />
@if (ViewBag.myquizes != null)
{
    <h4>Question: </h4>
    <h2>@ViewBag.myquizes</h2>
}
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <input asp-for="QuestionId" hidden="hidden" class="form-control" />
            <input asp-for="Description" hidden="hidden" value="" class="form-control" />

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCorrectAnswer" /> @Html.DisplayNameFor(model => model.IsCorrectAnswer)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-questionid="@ViewBag.myquizid">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
