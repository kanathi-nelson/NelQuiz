@model IEnumerable<NelQuiz.Viewmodels.AssessmentViewmodel>

@{
    ViewData["Title"] = "Create";
}


<h4>Assessment Answers</h4>
<hr />
<div class="row justify-content-center">

    <div class="col-md-8">
        @foreach (var item in Model)
        {
            <h3 style="font-style:italic"><b>Question: </b> @item.QuestionName</h3>           
            <div class="form-group">
                @foreach (var a in item.AnswerOptions)
                {
                <div class="radio">

                    @if (item.ChosenAnswerId == a.Id)
                    {
                        if (a.IsCorrectAnswer == true)
                        {
                            <label style="color:green;">
                                <input class="input-box" type="radio" checked="" value="@a.Id"> @a.Name <i class="fa fa-check"></i> <br />
                            </label>
                        }
                        else
                        {
                            <label style="color:red;">
                                <input type="radio" checked="" value="@a.Id"> @a.Name <i style="font-weight:600">X</i> <br />
                            </label>
                        }
                    }
                    else
                    {
                        if (a.IsCorrectAnswer == true)
                        {
                            <label style="color:green;">
                                <input class="input-box" type="radio" checked="" value="@a.Id"> @a.Name <i class="fa fa-check"></i> <br />
                            </label>
                        }
                        else
                        {
                        <label>
                            <input type="radio" value="@a.Id"> @a.Name <br />
                        </label>
                        }

                    }


                </div>
                }

            </div>
        }


    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
